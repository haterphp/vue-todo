{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@app/*": ["./src/app/*"],
      "@data/*": ["./src/data/*"],
      "@domain/*": ["./src/domain/*"],
    }
  }
}
